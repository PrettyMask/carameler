}
.input-wrap{
    display: flex;
    justify-content: center;
    flex-direction: column;
    align-content: center;
    padding: 5px 16px;
    font-size: 16px;
}
.input-item{
    display: flex;
    justify-content: space-between;
    padding: 10px 0;
}
.input-label{
    width: 230rpx;
    text-align: right;
    padding: 5px 40rpx 5px 0;
    letter-spacing: 0.6px;
}
.input-border{
    border: 1px solid rgba(255, 180, 217, 0.2);
    flex-grow: 1;
    padding: 5px 10px;
}
.input-date{
    width: 300rpx;
}
.submit-confirm{
    width: 100%;
    position: fixed;
    bottom: 20rpx;
    left: 0;
    background: palevioletred;
    color: white;
    font-size: 18px;
    padding: 10px 0;
    text-align: center;
}
