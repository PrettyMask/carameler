<view class="history-list">
    <view class="year-wrap" wx:for="{{listData}}" wx:for-item="yearItem" wx:for-index="yearIndex" wx:key="{{yearIndex}}">
        <view class="year-title" bindtap="spread" data-year="{{yearIndex}}">
            <div>{{yearIndex}}</div>
            <div class="spread-icon"> {{yearItem.isSpread ? '^' : '>'}} </div>
        </view>
        <view class="month-wrap" wx:if="{{yearItem.isSpread}}" wx:for="{{yearItem.data}}" wx:for-item="monthItem" wx:for-index="monthIndex" wx:key="{{monthIndex}}">
            <div class="month-title">{{yearIndex}}/{{monthIndex}}</div>
            <view class="money-wrap" wx:for="{{monthItem}}" wx:for-item="moneyItem" wx:for-index="moneyIndex" wx:key="{{moneyIndex}}">
                <div class="money-day">{{monthIndex}}/{{moneyItem.day}}</div>
                <div class="money-label">{{moneyItem.label}}</div>
                <div class="money-money">{{moneyItem.value}}</div>
            </view>
        </view>
    </view>
    <view class="add-item" bindtap="addNewItem">新增</view>
</view>
