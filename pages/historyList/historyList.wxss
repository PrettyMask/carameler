.history-list{
    height: 100vh;
    background: rgba(255, 180, 217, 0.1);
}
.empty{
    text-align: center;
    padding: 100rpx 0;
    color: palevioletred;
    font-size: 20px;
}
.data-wrap{
    height: 90%;
}
.year-wrap{
    background: #ffffff;
    padding: 10px 16px;
    box-shadow: 0 1px 3px 1px rgba(255, 180, 217, 0.4);
    margin: 5px 0;
}
.year-title{
    color: palevioletred;
    font-weight: bold;
    font-size: 23px;
    text-align: left;
    padding: 5px 0;
    width: 100%;
    text-shadow: 0 2px 4px 1px rgba(255, 180, 217, 0.4);
    display: flex;
    justify-content: space-between;
}
.month-wrap{
    background: #ffffff;
    padding-top: 10px;
}
.month-title{
    color: rgba(219, 112, 147, 0.59);
    font-weight: bold;
    font-size: 18px;
    display: flex;
    justify-content: space-between;
    padding: 5px 0;
    background: linear-gradient(to right, white, #ff90b4 100%);
    position: sticky;
    top: 0;
    border-radius: 10rpx;
}
.count{
    color: white;
    padding-right: 5rpx;
}
.day-wrap{
    width: 100%;
}
.money-wrap{
    width: 100%;
    padding: 5px 0;
    font-size: 16px;
    border-bottom: 1px solid rgba(255, 180, 217, 0.2);
    overflow: hidden;
    position: relative;
    height: 60rpx;
}
.item-info{
    background: white;
    position: absolute;
    top: 0;
    height: 100%;
    width: 100%;
    display: flex;
    justify-content: space-between;
    transition: left 0.2s ease-in-out;
    z-index: 10;
    padding-top: 8px;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}
.item-info .money-day{
    width: 200rpx;
}
.item-info .money-label{
    width: 300rpx;
}
.item-info .money-value{
    flex-grow: 1;
}
.del-item{
    position: absolute;
    right: 0;
    top: 0;
    width: 120rpx;
    height: 100%;
    text-align: center;
    vertical-align: middle;
    background: red;
    color: white;
    padding-top: 5px;
    z-index: 4;
}
.btn-group{
    width: 100%;
    position: fixed;
    /*bottom: 20rpx;*/
    bottom: 0rpx;
    left: 0;
    display: flex;
    justify-content: space-between;
    align-items: center;
    border: 1px solid palevioletred;
}
.clear-all{
    background: white;
    color: palevioletred;
    font-size: 18px;
    padding: 10px 0;
    text-align: center;
    width: 50%;
}
.add-item{
    background: palevioletred;
    color: white;
    font-size: 18px;
    padding: 10px 0;
    text-align: center;
    flex-grow: 1;
}

.items{
    width: 100%;
}
.item{
    position: relative;
    border-top: 2rpx solid #eee;
    height: 120rpx;
    line-height: 120rpx;
    overflow: hidden;
}
.txt{
    position: absolute;
    top:0;
    background-color: #fff;
    width: 100%;
    z-index: 5;
    padding:0 10rpx;
    transition: left 0.2s ease-in-out;
    white-space:nowrap;
    overflow:hidden;
    text-overflow:ellipsis;
}
.del{
    position: absolute;
    top:0;
    background-color: #e64340;
    width: 180rpx;
    text-align: center;
    z-index: 4;
    right: 0;
    color: #fff
}
