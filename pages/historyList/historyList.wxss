.history-list{
    height: 100%;
    background: rgba(255, 180, 217, 0.1);
}
.empty{
    text-align: center;
    padding: 100rpx 0;
    color: palevioletred;
    font-size: 20px;
}
.data-wrap{
    /*height: 95%;*/
    padding-bottom: 100rpx;
}
.year-wrap{
    background: #ffffff;
    padding: 10px 16px;
    box-shadow: 0 1px 3px 1px rgba(255, 180, 217, 0.4);
    margin: 5px 0;
}
.year-title{
    color: palevioletred;
    font-weight: bold;
    font-size: 23px;
    text-align: left;
    padding: 5px 0;
    width: 100%;
    text-shadow: 0 2px 4px 1px rgba(255, 180, 217, 0.4);
    display: flex;
    justify-content: space-between;
}
.month-wrap{
    background: #ffffff;
    padding-top: 10px;
}
.month-title{
    color: rgba(219, 112, 147, 0.59);
    font-weight: bold;
    font-size: 18px;
    display: flex;
    justify-content: space-between;
    padding: 5px 0;
    background: linear-gradient(to right, white, #ff90b4 100%);
    position: sticky;
    top: 0;
    border-radius: 10rpx;
}
.count{
    color: white;
    padding-right: 5rpx;
    display: flex;
    justify-content: space-between;
}
.day-wrap{
    width: 100%;
}
.money-wrap{
    width: 100%;
    padding: 5px 0;
    font-size: 16px;
    border-bottom: 1px solid rgba(255, 180, 217, 0.2);
    overflow: hidden;
    position: relative;
    height: 60rpx;
}
.item-info{
    background: white;
    position: absolute;
    top: 0;
    height: 100%;
    width: 100%;
    display: flex;
    justify-content: space-between;
    transition: left 0.2s ease-in-out;
    z-index: 10;
    padding-top: 8px;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}
.item-info .money-day{
    width: 200rpx;
}
.item-info .money-label{
    width: 300rpx;
}
.item-info .money-value{
    flex-grow: 1;
}
.no-more-data{
    width: 100%;
    text-align: center;
    font-size: 20rpx;
    color: #d6d6d6;
    padding: 20rpx 0;
}
.del-item{
    position: absolute;
    right: 0;
    top: 0;
    width: 120rpx;
    height: 100%;
    background: red;
    color: white;
    z-index: 4;
    display: flex;
    align-items: center;
    justify-content: center;
}
.btn-group{
    z-index: 10;
    width: 100%;
    position: fixed;
    /*bottom: 20rpx;*/
    bottom: 0;
    left: 0;
    display: flex;
    justify-content: space-between;
    align-items: center;
    border: 1px solid palevioletred;
}
.clear-all{
    background: white;
    color: palevioletred;
    font-size: 18px;
    padding: 10px 0;
    text-align: center;
    width: 50%;
}
.add-item{
    background: palevioletred;
    color: white;
    font-size: 18px;
    padding: 10px 0;
    text-align: center;
    flex-grow: 1;
}

.icon-arrow-up-year {
    position: relative;
    height: 20px;
    width: 20px;
    background-color: rgba(255, 255, 255, 0);
    cursor: pointer;
    margin-left: 10px;
    transition: transform 200ms ease-in;
}

.icon-arrow-up-year::before {
    content: "";
    width: 9px;
    height: 9px;
    border: solid palevioletred;
    border-width: 3px 3px 0 0;
    transform: translate(-50%, -50%) rotate(-45deg);
    position: absolute;
    left: 80%;
    top: 80%;
}
.icon-arrow-up-month {
    position: relative;
    height: 20px;
    width: 20px;
    background-color: rgba(255, 255, 255, 0);
    cursor: pointer;
    margin-left: 10px;
    transition: transform 200ms ease-in;
}

.icon-arrow-up-month::before {
    content: "";
    width: 6px;
    height: 6px;
    border: solid #ffffff;
    border-width: 2px 2px 0 0;
    transform: translate(-50%, -50%) rotate(-45deg);
    position: absolute;
    left: 50%;
    top: 70%;
}

.rotate90{
    transform: translate(0%, 10%) rotate(90deg);
}
